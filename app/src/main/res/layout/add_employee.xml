<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/alrakizaback"
    >
    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/alrakizaback"
        >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="70dp"
        android:layout_marginTop="@dimen/toolbar_admin"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/finance"
            android:paddingTop="4dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/name_employee"
                android:textSize="@dimen/size_text"
                android:textStyle="bold"
                android:paddingRight="10dp"
                android:layout_gravity="right"
                android:textColor="@color/white"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="#c6c3c3"
                android:hint="@string/name_employee"
                android:gravity="right"
                android:textSize="@dimen/size_text"
                android:paddingRight="15dp"
                android:background="@mipmap/textbox"
                android:id="@+id/username"
                android:textColor="#000"
                android:inputType="text"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/ly_username"
            android:paddingTop="4dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/user_employee"
                android:textSize="@dimen/size_text"
                android:textStyle="bold"
                android:paddingRight="10dp"
                android:layout_gravity="right"
                android:textColor="@color/white"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="#c6c3c3"
                android:hint="@string/user_employee"
                android:gravity="right"
                android:textSize="@dimen/size_text"
                android:paddingRight="15dp"
                android:background="@mipmap/textbox"
                android:id="@+id/username_login"
                android:textColor="#000"
                android:inputType="text"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/pass"
            android:paddingTop="4dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pass_employee"
                android:textSize="@dimen/size_text"
                android:textStyle="bold"
                android:paddingRight="10dp"
                android:layout_gravity="right"
                android:textColor="@color/white"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="#c6c3c3"
                android:hint="@string/pass_employee"
                android:gravity="right"
                android:textSize="@dimen/size_text"
                android:paddingRight="15dp"
                android:background="@mipmap/textbox"
                android:id="@+id/password"
                android:textColor="#000"
                android:inputType="text"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/depart_employee"
                android:textSize="@dimen/size_text"
                android:textStyle="bold"
                android:paddingRight="10dp"
                android:layout_gravity="right"
                android:textColor="@color/white"
                />
            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="10dp"
                android:background="@mipmap/textbox"
                android:spinnerMode="dropdown"
                android:gravity="right"
                android:id="@+id/department"

                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/section_employee"
                android:textSize="@dimen/size_text"
                android:textStyle="bold"
                android:paddingRight="10dp"
                android:layout_gravity="right"
                android:textColor="@color/white"
                />
            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="10dp"
                android:background="@mipmap/textbox"
                android:spinnerMode="dropdown"
                android:gravity="right"
                android:id="@+id/section"

                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/main_task_employee"
                android:textSize="@dimen/size_text"
                android:textStyle="bold"
                android:paddingRight="10dp"
                android:layout_gravity="right"
                android:textColor="@color/white"
                />
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="#c6c3c3"
                android:hint="@string/main_task_employee"
                android:gravity="right"
                android:textSize="@dimen/size_text"
                android:paddingRight="15dp"
                android:paddingLeft="8dp"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:background="@mipmap/textbox"
                android:isScrollContainer="true"
                android:id="@+id/main_mission"
                android:textColor="#000"
                android:inputType="textMultiLine"
                android:singleLine="false"
                android:overScrollMode="always"
                android:scrollbarStyle="insideInset"
                android:scrollbars="horizontal"
                android:maxLines="4"

                />
            </ScrollView>
        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/save"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:text="@string/save"
            android:textSize="@dimen/size_text_button"
            android:textStyle="bold"
            android:background="@mipmap/bigbutton"
            android:layout_gravity="center"
            />
    </LinearLayout>
    </RelativeLayout>
    </ScrollView>

</LinearLayout>