<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/alrakizaback"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/space_text"
        android:orientation="vertical"
        android:id="@+id/lay_name"
        android:paddingBottom="50dp"
        >


        <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="@dimen/toolbar"
            android:id="@+id/list_item"
            >
        </ListView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="bottom"
        >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/logo"
            android:layout_marginRight="5dp"
            android:text="@string/button_miss_extr"
            android:textSize="35dp"
            android:id="@+id/extremployee"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/hint_button"
            android:text="@string/employee_data4"
            android:textSize="35dp"
            android:id="@+id/mainemployee"
            />
    </LinearLayout>
</LinearLayout>