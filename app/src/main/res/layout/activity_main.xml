<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/alrakizaback"
>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="100dp"
            android:paddingBottom="100dp"
            >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/logo_s"
        android:layout_gravity="center"
        android:id="@+id/logo"
        android:layout_below="@+id/toolbar"
        />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:textSize="@dimen/size_text_main"
                android:text="@string/logo"
                android:textAlignment="center"
                android:textStyle="bold"
                android:id="@+id/logo_detail"
                android:layout_below="@+id/logo"
                />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/logo"
        android:gravity="center"
        android:layout_marginTop="100dp"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/main1"
            android:text="@string/main1"
            android:textSize="@dimen/size_text_button"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:background="@mipmap/bigbutton"
            android:layout_below="@+id/logo"
            />
        <Button
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/main2"
            android:text="@string/main2"
            android:textSize="@dimen/size_text_button"
            android:textStyle="bold"
            android:layout_marginTop="30dp"
            android:background="@mipmap/bigbutton"
            />
    </LinearLayout>

            </RelativeLayout>
    </ScrollView>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/fab_margin"
        android:layout_marginTop="70dp"
        app:srcCompat="@android:drawable/ic_menu_help" />

</RelativeLayout>
